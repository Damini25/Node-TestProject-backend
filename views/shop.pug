extends layouts/mainLayout.pug

block styles
    link(rel="stylesheet" href="/css/main.css")
    link(rel="stylesheet" href="/css/product.css")
block content
    main
        h1 My Products
        h3 List of all products
            if prods.length > 0
                ul
                    each products in prods
                        li #{products.title}
            else
                p No Products


